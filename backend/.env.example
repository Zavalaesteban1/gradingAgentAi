# Database Configuration
DATABASE_NAME=cppgradingdb
DATABASE_USER=root
DATABASE_PASS=your_mysql_password_here
DATABASE_HOST=localhost
DATABASE_PORT=3306

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here

# Claude API Configuration (Get from: https://console.anthropic.com/)
CLAUDE_API_KEY=your-claude-api-key-here

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# File Upload Settings (in bytes)
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880
MAX_CODE_SIZE_KB=500

# Grading System Settings
DEFAULT_TIMEOUT_SECONDS=30
SUPPORTED_EXTENSIONS=.cpp,.cc,.cxx

# API Configuration
PAGE_SIZE=20

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
